<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>SmartCityControllerServlet</servlet-name>
        <servlet-class>crud.SmartCityControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusControllerServlet</servlet-name>
        <servlet-class>crud.BusControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HospitalControllerServlet</servlet-name>
        <servlet-class>crud.HospitalControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TourismControllerServlet</servlet-name>
        <servlet-class>crud.TourismControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SmartCityControllerServlet</servlet-name>
        <url-pattern>/RouteEditServlet</url-pattern>
        <url-pattern>/SmartCityControllerServlet</url-pattern>
        <url-pattern>/SmartCityIUrlServlet</url-pattern>
        <url-pattern>/RouteIUrlServlet</url-pattern>
        <url-pattern>/RouteUUrlServlet</url-pattern>
        <url-pattern>/AdminLogin</url-pattern>
        <url-pattern>/RouteDServlet</url-pattern>
        <url-pattern>/RouteInfoSearch</url-pattern>
        <url-pattern>/RouteRadioCalled</url-pattern>
        <url-pattern>/FeedbackAddServlet</url-pattern>
        <url-pattern>/PathFinderServlet</url-pattern>
        <url-pattern>/PathFinderPage</url-pattern>
        <url-pattern>/LogoutAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusControllerServlet</servlet-name>
        <url-pattern>/BusControllerServlet</url-pattern>
        <url-pattern>/BusUUrlServlet</url-pattern>
        <url-pattern>/BusEditServlet</url-pattern>
        <url-pattern>/BusIUrlServlet</url-pattern>
        <url-pattern>/BusDServlet</url-pattern>
        <url-pattern>/BusInfoSearch</url-pattern>
        <url-pattern>/BusRadioCalled</url-pattern>
        <url-pattern>/FindBusInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HospitalControllerServlet</servlet-name>
        <url-pattern>/HospitalControllerServlet</url-pattern>
        <url-pattern>/HospitalIUrlServlet</url-pattern>
        <url-pattern>/HospitalEditServlet</url-pattern>
        <url-pattern>/HospitalUUrlServlet</url-pattern>
        <url-pattern>/HospitalDServlet</url-pattern>
        <url-pattern>/HospitalRadioCalled</url-pattern>
        <url-pattern>/HospitalInfoSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourismControllerServlet</servlet-name>
        <url-pattern>/TourismControllerServlet</url-pattern>
        <url-pattern>/TourismAddServlet</url-pattern>
        <url-pattern>/TourismEditServlet</url-pattern>
        <url-pattern>/TourismRadioCalled</url-pattern>
        <url-pattern>/TourismInfoSearch</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
